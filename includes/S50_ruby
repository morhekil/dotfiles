if [[ -d "${HOME}/.gem/ruby/1.8" ]]; then
  export GEM_PATH=/Users/saruman/.gem/ruby/1.8
  export GEM_HOME=/Users/saruman/.gem/ruby/1.8
fi

if [[ -f "/usr/local/bin/mate" ]]; then
  export GEM_EDITOR=mate
  export VISUAL=mate
fi

if [[ -f "/usr/local/bin/subl" ]]; then
  export GEM_EDITOR=subl
  export VISUAL=subl
fi

# alias to launch Rails console with pry instead of irb
alias pryr="pry -r ./config/environment"
